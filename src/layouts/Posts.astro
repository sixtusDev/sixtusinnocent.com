---
import type { CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagination from "@components/Pagination.astro";
import Card from "@components/Card";
import { SITE } from "@config";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedPosts: CollectionEntry<"blog">[];
  pageTitle?: string;
  activeNav?: string;
  pageDesc?: string;
}

const {
  currentPage,
  totalPages,
  paginatedPosts,
  pageTitle,
  pageDesc,
  activeNav,
} = Astro.props;
---

<Layout title={`${pageTitle || "Posts"} | ${SITE.title}`}>
  <Header activeNav={activeNav || "posts"} />
  <Main
    pageTitle={pageTitle || "Posts"}
    pageDesc={pageDesc || "All the articles I've posted."}
  >
    <ul>
      {
        paginatedPosts.map(({ data, slug }) => (
          <Card href={data.url || `/posts/${slug}/`} frontmatter={data} />
        ))
      }
    </ul>
  </Main>

  <Pagination
    {currentPage}
    {totalPages}
    prevUrl={`/posts${currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""}/`}
    nextUrl={`/posts/${currentPage + 1}/`}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
